<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record model="ir.ui.view" id="tree_brd_salesOfflineQuery">
            <field name="name">Tree Sales Offline Query</field>
            <field name="model">brd.query_sales_offline</field>
            <field name="arch" type="xml">
                <tree string="Sales Offline Query">
                    <field name="order_name" string="# Order"/>
                    <field name="pos_name" string="POS"/>
                    <field name="session_name" string="Session"/>
                    <field name="date_order" string="Date Order"/>
                    <field name="user_id" string="Users"/>
                    <field name="product_id" string="Product"/>
                    <field name="qty" string="Qty"/>
                    <field name="price_unit" string="Unit Price"/>
                    <field name="taxes" string="Taxes"/>
                   <field name="amount" string="Amount"/>
                   <field name="payment_method" string="Payment Method"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="search_brd_salesOfflineQuery">
            <field name="name">Search Sales Offline Query</field>
            <field name="model">brd.query_sales_offline</field>
            <field name="arch" type="xml">
                <search string="Search Sales Offline Query">
                    <field name="order_name" string="# Order"/>
                    <field name="pos_name" string="POS"/>
                    <field name="date_order" string="Date Order"/>
                    <field name="product_id" widget="selection"/>
                    <field name="user_id" widget="selection"/>
                </search>
            </field>
        </record>
        
		<record id="waction_brd_salesOfflineQuery" model="ir.actions.act_window">
			<field name="name">Sales Offline Query</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">brd.query_sales_offline</field>
			<field name="search_view_id" ref="search_brd_salesOfflineQuery"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>			
		</record>
		
		<record id="wactionView_brd_salesOfflineQuery" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_brd_salesOfflineQuery"/>
			<field name="act_window_id" ref="waction_brd_salesOfflineQuery"/>
		</record>

    </data>
</openerp>
